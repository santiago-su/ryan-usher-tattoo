<div class="row contact-section">
  <div class="col-md-5">
    <div class="big-mask">
      <%= image_tag 'mask2.png' %>
    </div>
  </div>
  <div class="col-md-6">
    <h3 class="lead">CONTACT</h3>
    <hr>
    <p class="contact-description">
      For any tattoo apointments please feel free to send me an email, including what you would like to get tattooed, where on your body, colour or black and grey and roughly how big you would like it.
    </p>
    <br><br>

    <%= form_for @contact, html:  { class: 'form-horizontal contact-form' } do |f| %>
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
          <%= f.text_field :name, required: true, class: "form-control", placeholder: 'Name' %>
        </div>
      </div>
      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          <%= f.email_field :email, required: true, class: "form-control", placeholder: 'youremail@example.com' %>
        </div>
      </div>
      <div class="form-group">
        <label for="phone" class="col-sm-2 control-label">Phone</label>
        <div class="col-sm-10">
          <%= f.text_field :phone, required: true, class: "form-control", placeholder: 'Phone number' %>
        </div>
      </div>
      <div class="form-group">
        <label for="message" class="col-sm-2 control-label">Message</label>
        <div class="col-sm-10">
          <%= f.text_area :message, required: true, class: "form-control", placeholder: 'Please include details such as: the best time to call, your availability, preferences for subject, style, placement and a rough idea of size.' %>
        </div>
      </div>
      <div class= "hidden">
        <%= f.hidden_field :nickname, :hint => 'Leave this field blank!' %>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Send message', class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
